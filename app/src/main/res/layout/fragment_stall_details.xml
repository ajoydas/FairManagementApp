<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ajoy.com.fairmanagementapp.fragments.FragmentStallDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:padding="20dp">

        <!-- TODO: Update blank fragment layout -->


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:shrinkColumns="2">

            <TableRow android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detailsstallname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorButton1" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detailsstallowner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorButton1" />

            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detailsstalldescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorButton1" />

            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/bedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorButton1"
            android:onClick="editDetailsClicked"
            android:text="Edit Information"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bstallmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bedit"
            android:layout_marginTop="5dp"
            android:background="@color/colorButton1"
            android:onClick="stallMapClicked"
            android:text="View on  Google Map"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bSaveEmployees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bstallmap"
            android:layout_marginTop="5dp"
            android:background="@color/colorButton1"
            android:onClick="saveEmployeesClicked"
            android:text="Save Employees As PDF"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bSaveSells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bSaveEmployees"
            android:layout_marginTop="5dp"
            android:background="@color/colorButton1"
            android:onClick="saveSellsClicked"
            android:text="Save Sells As PDF"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</ScrollView>