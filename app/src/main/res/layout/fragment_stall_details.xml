<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ajoy.com.fairmanagementapp.fragments.FragmentStallDetails">

    <!-- TODO: Update blank fragment layout -->


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="2"
        android:id="@+id/tableLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp">

        <TableRow>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=" : "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/detailsstallname"
                android:paddingBottom="5dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Owner"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=" : "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/detailsstallowner"
                android:paddingBottom="5dp"
                android:textStyle="bold" />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Description"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=" : "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/detailsstalldescription"
                android:paddingBottom="5dp"
                android:textStyle="bold" />

        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Information"
        android:id="@+id/bedit"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="editDetailsClicked"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View on  Google Map"
        android:id="@+id/bstallmap"
        android:onClick="stallMapClicked"
        android:layout_below="@+id/bedit"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save Employees As PDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bSaveEmployees"
        android:layout_below="@+id/bstallmap"
        android:layout_alignParentStart="true"
        android:onClick="saveEmployeesClicked" />

    <Button
        android:text="Save Sells As PDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bSaveSells"
        android:layout_below="@+id/bSaveEmployees"
        android:layout_alignParentStart="true"
        android:onClick="saveSellsClicked" />
</RelativeLayout>